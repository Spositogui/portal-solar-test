<%= form_with(url: advanced_search_path , method: :get) do %>
  <div class="advanced-form" style="display:none;">
    <%= label_tag(:manufacturer, 'Fabricante') %>
    <div class="simple-form__input">
      <%= text_field_tag(:manufacturer, nil, placeholder: 'Ex: WEG') %>
    </div>

    <%= label_tag(:max, 'Preç. Max') %>
    <div class="simple-form__input">
      <%= number_field_tag(:max, nil, placeholder: 'Ex: 50000') %>
    </div>
    
    <%= label_tag(:min, 'Preç. Min') %>
    <div class="simple-form__input">
      <%= number_field_tag(:min, nil, placeholder: 'Ex: 1000') %>
    </div>
      
    <%= label_tag(:structure_type, 'Tipo de estrutura') %>
    <div class="simple-form__input">
      <%= select_tag(:structure_type, 
                     options_for_select(PowerGenerator.structure_types.keys.map {|key| key.capitalize}),
                     prompt: 'Selecione um tipo') %>
    </div>
      <%= submit_tag('Pesquisar') %>
  </div>
<% end %>