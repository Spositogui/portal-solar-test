<%= form_with(url: simple_search_path, method: :get) do %>
  <div class="simple-form">
    <%= label_tag(:q, 'simple search', class: 'hidden') %>
    <div class="simple-form__input">
      <%= text_field_tag(:q, nil, placeholder: 'O que procura?') %>
    </div>
    <div class="simple-form__btn">
      <%= submit_tag('Pesquisar') %>
    </div>
  </div>
<% end %>